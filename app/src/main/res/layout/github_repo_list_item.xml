<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="32dp"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/repository_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:importantForAccessibility="no"
            android:src="@drawable/avatar"
            android:tint="#a4c639"
            />

        <TextView
            android:id="@+id/repository_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/repository_avatar"
            android:layout_toRightOf="@id/repository_avatar"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"
            tools:text="Repository name"
            />

        <TextView
            android:id="@+id/repository_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_name"
            android:layout_toEndOf="@id/repository_avatar"
            android:layout_toRightOf="@id/repository_avatar"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="14sp"
            tools:text="View injection library for Android."
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/repository_description"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/repository_avatar"
            android:layout_toRightOf="@id/repository_avatar"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/repository_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/star"
                android:gravity="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp"
                tools:text="1487"
                />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
